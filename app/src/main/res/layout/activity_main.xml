<?xml version="1.0" encoding="utf-8"?>
<android.widget.RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.vappu.touristguide.MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBG"
        android:orientation="vertical"
        >


        <Button
            android:id="@+id/mapButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorBG1"
            android:textColor="@color/colorTextLight"
            android:onClick="openMap"
            android:paddingBottom="20dp"
            android:paddingTop="20dp"
            android:text="Map" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="50dp"
            android:paddingEnd="50dp">


            <TextView
                android:id="@+id/locationText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="20dp"
                android:paddingTop="20dp"
                android:textAllCaps="true"
                android:textColor="@color/colorTextLight" />

            <ProgressBar
                android:id="@+id/progressSpinner"
                style="?android:attr/progressBarStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                tools:visibility="gone" />

            <TextView
                android:id="@+id/locatingText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Locating... Please make sure Location services are enabled"
                android:layout_weight="1"
                android:layout_gravity="center"
                tools:visibility="gone"
                android:textAppearance="@android:style/TextAppearance.Material.Small"
                android:textColor="@color/colorTextLight"
                android:textSize="12sp"
                android:textStyle="italic" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tempText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingBottom="20dp"
                    android:paddingTop="20dp"
                    android:textAllCaps="true"
                    android:textColor="@color/colorTextLight" />

                <TextView
                    android:id="@+id/weatherText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingBottom="20dp"
                    android:paddingTop="20dp"
                    android:textAllCaps="true"
                    android:textColor="@color/colorTextLight"  />
            </LinearLayout>

            <Switch
                android:id="@+id/switchOut"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="20dp"
                android:paddingTop="20dp"
                android:textAllCaps="true"
                android:textColor="@color/colorTextLight"
                android:text="Outdoor Activities" />

            <TextView
                android:id="@+id/badWeatherText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="20dp"
                android:paddingTop="20dp"
                android:textColor="@color/colorTextLight" />


        </LinearLayout>


    </LinearLayout>

</android.widget.RelativeLayout>
